---
import Layout from "../layouts/Layout.astro";
import type { Book } from "./api/data.json";
const response = await fetch("http://localhost:4321/api/data.json");
const data: Book[] = await response.json();

---

<Layout title="My Favorite Books">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-6">My Favorite Books:</h1>
    <ul class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        data.map((book) => (
          <li class="bg-white rounded-lg shadow-md p-6 transition-transform hover:scale-105 hover:shadow-lg">
            <h2 class="text-2xl font-bold text-gray-800 mb-3">{book.title}</h2>
            <div class="space-y-2">
              <p class="flex items-center text-gray-600">
                <span class="font-medium">Author:</span>
                <span class="ml-2">{book.author}</span>
              </p>
              <p class="flex items-center text-gray-600">
                <span class="font-medium">Date:</span>
                <span class="ml-2">{book.date}</span>
              </p>
              <p class="flex items-center text-gray-600">
                <span class="font-medium">Genre:</span>
                <span class="ml-2 px-3 py-1 bg-gray-100 rounded-full text-sm">
                  {book.genre}
                </span>
              </p>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
