---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page Not Found">
  <main
    class="flex flex-col items-center justify-center min-h-screen text-center">
    <h1 class="text-6xl font-bold text-red-600">404</h1>
    <p class="text-xl text-gray-700 mt-4">
      Oops! The page you’re looking for doesn’t exist.
    </p>

    <a
      href="/"
      class="mt-6 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
      Go Back Home
    </a>
  </main>
</Layout>
