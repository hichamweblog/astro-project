---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-6">Contact</h1>
    <p class="text-lg mb-8">
      Get in touch with us through the following contact details.
    </p>
    <div class="space-y-8">
      <section class="p-6 bg-white rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-4">Email</h2>
        <p class="text-base text-gray-700">
          You can reach us at contact@example.com.
        </p>
      </section>
      <section class="p-6 bg-white rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-4">Phone</h2>
        <p class="text-base text-gray-700">Call us at (123) 456-7890.</p>
      </section>
    </div>
  </div>
</Layout>
