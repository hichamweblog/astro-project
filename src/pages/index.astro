---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-6">Home</h1>
    <p class="text-lg mb-8">
      Welcome to our homepage. Here you will find the latest information and
      updates.
    </p>
    <div class="space-y-8">
      <section class="p-6 bg-white rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-4">Introduction</h2>
        <p class="text-base text-gray-700">
          This is the introduction section of the homepage.
        </p>
      </section>
      <section class="p-6 bg-white rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-4">Features</h2>
        <p class="text-base text-gray-700">
          This section highlights the features of our website.
        </p>
      </section>
    </div>
  </div>
</Layout>
